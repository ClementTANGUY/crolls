<% current_fight.fighters.each do |fighter| %>
  <h3>
    <%= fighter.combatant.name %>
    <small>
      <%= link_to "retirer de l'arène", fighter, data: { confirm: "Êtes-vous sûr de sortir '#{fighter.combatant.name}' de l'arène ?" }, method: :delete, remote: true %>
    </small>
  </h3>
<% end %>
<br>
<% if current_fight.fighters.size == 2 %>
  <%= link_to "Démarre le combat", fights_path, method: :post, class:"btn btn-primary btn-lg" %>
<% end %>

