<div class="combatant-card-<%= combatant.id %>">
  <div class="combatant">
    <div class='combatant-id'>
      <div class='combatant-count'><%= combatant.id %></div>
    </div>

    <% if !combatant.image_url.blank? %>
      <%= image_tag combatant.image_url, alt:"Combattant", class:"combatant-image hidden-xs" %>
    <% else %>
      <%= image_tag "https://scontent-amt2-1.cdninstagram.com/t51.2885-15/s640x640/sh0.08/e35/c0.135.1080.1080/18299818_463781843955344_8661087945098264576_n.jpg", alt:"Combattant", class:"combatant-image hidden-xs" %>
    <% end %>

    <div class='combatant-body'>
      <h3><%= link_to combatant.name, combatant_path(combatant) %></h3>
    </div>

    <div class="combatant-details">
      <h5>
        <%= button_to "Vs", fighters_path(combatant_id: combatant.id), remote: true, method: :post, class: "btn btn-primary" %>
      </h5>
    </div>

    <ul class="list-inline combatant-controls">
      <li>
        <a><i class="fa fa-heart fa-2x"></i></a><br>
        <p><%= combatant.life %></p>
      </li>
      <li>
        <a><i class="fa fa-bolt fa-2x"></i></a><br>
        <p><%= combatant.attack %></p>
      </li>
    </ul>
  </div>
</div>
