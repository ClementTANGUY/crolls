<%= simple_form_for @combatant do |f| %>

  <% if !@combatant.nil? && @combatant.errors.any? %>
    <div class="alert alert-warning alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <ul>
      <% @combatant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-inputs">
    <%= f.input :name, label: "Nom" %>
    <%= f.input :life, label: "Points de vie", collection: 15..20  %>
    <%= f.input :attack, label: "Points d'attaque", collection: 2..4  %>
  </div>

  <div class="form-inputs">
    <%= f.input :image_url, label: "Avatar (trouve une tof en ligne)", placeholder: "http://www.maphoto.jpg, .png, .gif" %>
  </div>

  <p>&nbsp</p>

  <div class="form-actions">
    <% if f.object.new_record? %>
      <%= f.button :button, "CrÃ©er".html_safe, data: {disable_with: "<i class='fa fa-spinner fa-spin'></i>"}, class: "btn btn-success btn-lg"%>
    <% else %>
      <%= f.button :button, "Modifier".html_safe, data: {disable_with: "<i class='fa fa-spinner fa-spin'></i>"}, class: "btn btn-success btn-lg"%>
    <% end %>

    <%= link_to "Annuler", root_url, class: "btn btn-default btn-lg" %>
  </div>

<% end %>
